<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.OgrenciActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:padding="5dp"
        android:maxHeight="70dp"
        android:minHeight="70dp"
        android:maxWidth="70dp"
        android:minWidth="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textAdSoyad"
        android:paddingLeft="5dp"
        android:text="Ad Soyad"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNumara"
        android:paddingLeft="5dp"
        android:text="Numara"
        android:textSize="16sp"
        android:layout_below="@+id/textAdSoyad"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textBolum"
        android:paddingLeft="5dp"
        android:text="Bölüm"
        android:textSize="16sp"
        android:layout_below="@+id/textMail"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMail"
        android:paddingLeft="5dp"
        android:text="Mail"
        android:textSize="16sp"
        android:layout_below="@+id/textNumara"
        android:layout_alignParentRight="true" />
</RelativeLayout>
